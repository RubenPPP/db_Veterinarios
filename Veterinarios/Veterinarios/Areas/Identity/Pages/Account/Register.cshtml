@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
<div class="row">
    <div class="col-md-4">
            <h2>Crie uma nova conta.</h2>
            <hr />
            @* Dados da Autenticação *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
    </div>
    <div class="col-md-4">
        <hr />
        <div class="form-floating">
                <input asp-for="Input.Dono.Nome" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Dono.Nome"></label>
                <span asp-validation-for="Input.Dono.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Dono.NIF" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Dono.NIF"></label>
                <span asp-validation-for="Input.Dono.NIF" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Dono.Sexo" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Dono.Sexo"></label>
                <span asp-validation-for="Input.Dono.Sexo" class="text-danger"></span>
            </div>
    </div>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
